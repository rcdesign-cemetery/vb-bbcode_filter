    $this->tag_list['option']['size'] = array(
        'html' => '<font size="%2$s">%1$s</font>',
        'option_regex' => '#^[0-9\+\-]+$#',
        'strip_empty' => true
    );
}
else
{
    unset($this->tag_list['option']['size']);
}

if ($tags['FONT'])
{
// [FONT=XXX]
    $this->tag_list['option']['font'] = array(
        'html' => '<font face="%2$s">%1$s</font>',
        'option_regex' => '#^[^["`\':]+$#',
        'strip_empty' => true
    );
}
else
{
    unset($this->tag_list['option']['font']);
}
]]></phpcode>
